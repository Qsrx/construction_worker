<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/aty_do_work_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="每日打卡练习-单项选择题"
                    android:textSize="17sp"
                    android:layout_margin="@dimen/dp_15"
                    android:textColor="@color/color_c3" />
                <LinearLayout
                    android:id="@+id/fgt_content2_ll_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/aty_do_work_tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_c3"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        tools:text="施工过程中，工程师下令暂停部分工程，而暂停的的起因并非承包商违约或其他意外风险，承包商外业主提出索赔,则()。"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:id="@+id/fgt_content2_answer_pic" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:id="@+id/recyclerView"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fgt_content2_ll_anl"
                    android:orientation="vertical"
                    tools:ignore="WebViewLayout">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/fgt_content2_iv"/>
                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fgt_content2_web"/>
                    <TextView
                        android:layout_margin="@dimen/dp_10"
                        android:id="@+id/fgt_content2_et"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_c3"
                        android:padding="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/aty_do_work_ll_jx">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="#f5f5f5"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10">
                        <ImageView
                            android:src="@mipmap/icon_itembank_analysis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="解析"
                            android:textSize="17sp"
                            android:textColor="@color/color_c3"
                            android:layout_marginLeft="@dimen/dp_10"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/fgt_do_work_jx"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_c3"
                        android:layout_height="wrap_content"
                        android:text="本题考核工程暂停、终止合同的索赔。工程师有权仙灵暂停全部或者任何部分工程。只要这种暂停命令并非承包人"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10">
                        <ImageView
                            android:src="@mipmap/icon_itembank_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="考点"
                            android:textSize="17sp"
                            android:textColor="@color/color_c3"
                            android:layout_marginLeft="@dimen/dp_10"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/fgt_do_work_kd"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_c3"
                        android:layout_height="wrap_content"
                        android:text="本题考核工程暂停、终止合同的索赔。工程师有权仙灵暂停全部或者任何部分工程。只要这种暂停命令并非承包人"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/aty_do_work_tv_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看解析"
            android:textColor="@color/color_c3"
            android:background="@drawable/shape_yellow_3"
            android:textSize="15sp"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:layout_gravity="right"
            />
    </RelativeLayout>
