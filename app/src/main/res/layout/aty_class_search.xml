<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.aty.ClassSearchAty">
    <LinearLayout
        android:background="@color/color_while"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/fgt_class_kf"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="13dp"
            android:src="@mipmap/icon_header_back"/>
        <RelativeLayout
            android:id="@+id/fgt_class_header_rl_title"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/shape_class_header_bg"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/icon_search"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:id="@+id/fgt_class_header_tv_title"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_c3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程、关键词"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/fgt_class_ls"
            android:padding="13dp"
            android:layout_width="48dp"
            android:visibility="invisible"
            android:layout_height="48dp"
            android:src="@mipmap/icon_historical_record"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d2d2d2"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/aty_class_search_rv"/>
</LinearLayout>