<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".ui.aty.LiveDetailsAty">
    <include layout="@layout/header_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <cn.jzvd.JzvdStd
                android:id="@+id/aty_live_details_jz"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:id="@+id/aty_live_details_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:text="直播标题"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_F6"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/main_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播介绍"
                    android:textColor="@color/color_c3"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_5"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_ccc"
                android:layout_marginLeft="@dimen/dp_10"/>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aty_live_details_web"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>