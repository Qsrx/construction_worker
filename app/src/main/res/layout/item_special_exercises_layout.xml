<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_F6"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_while_bg">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/main_color"/>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_15">
            <TextView
                android:id="@+id/item_special_exercises_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单选题"
                android:textColor="@color/color_c3"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/item_special_exercises_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共300题"
                android:textSize="13sp"
                android:textColor="@color/color_c6"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_special_exercises_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="试答5题"
            android:background="@drawable/shape_save_bg"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/color_c3"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
</LinearLayout>
