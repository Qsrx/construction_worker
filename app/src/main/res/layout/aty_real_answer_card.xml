<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:layout_height="match_parent"
    tools:context=".ui.aty.RealAnswerCardAty">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/header_iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@mipmap/icon_cache_back"/>
        <TextView
            android:id="@+id/header_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_c3"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/icon_itembank_count_down"/>
            <TextView
                android:id="@+id/aty_real_exam_tv_time"
                android:layout_marginTop="-7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:16"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="15sp"
        android:text="模拟测试卷（一）"
        android:id="@+id/aty_real_answer_card_small_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/aty_real_answer_card_rv"/>
    <TextView
        android:id="@+id/aty_answer_card_tv_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:text="交卷并查看结果"
        android:textSize="15sp"
        android:textColor="@color/color_c3"
        android:background="@color/main_color"/>
</LinearLayout>