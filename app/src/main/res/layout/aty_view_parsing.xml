<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_while"
    tools:context=".ui.aty.ViewParsingAty">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/aty_do_work_iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="13dp"
            android:src="@mipmap/icon_header_back"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/aty_more_do_work_iv_dtk"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/icon_answer_card"/>
        <!--<RadioButton-->
            <!--android:id="@+id/aty_do_work_rb_sc"-->
            <!--android:button="@null"-->
            <!--android:drawableLeft="@drawable/class_is_sc"-->
            <!--android:layout_marginRight="@dimen/dp_10"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_width="@dimen/dp_30"-->
            <!--android:layout_marginLeft="@dimen/dp_20"-->
            <!--android:layout_height="@dimen/dp_30"/>-->
        <ImageView
            android:id="@+id/aty_do_work_rb_sc"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_30"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/aty_do_work_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="每日打卡练习-单项选择题"
                android:textSize="17sp"
                android:layout_margin="@dimen/dp_15"
                android:textColor="@color/color_c3"
                />
            <LinearLayout
                android:id="@+id/aty_view_parsing_ll_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/aty_do_work_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_c3"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    tools:text="施工过程中，工程师下令暂停部分工程，而暂停的的起因并非承包商违约或其他意外风险，承包商外业主提出索赔,则()。"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:id="@+id/aty_do_work_rv"/>
                <LinearLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="#f5f5f5">
                    <LinearLayout
                        android:id="@+id/fgt_my_ll_quiz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="参考答案"
                            android:gravity="center"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/color_999"/>
                        <TextView
                            android:id="@+id/aty_view_parsing_ck"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            tools:text="D"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#49BC9B"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/fgt_my_ll_collects"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="您的答案"
                            android:gravity="center"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/color_999"/>
                        <TextView
                            android:id="@+id/aty_view_parsing_myself"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            tools:text="C"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/main_color"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aty_view_parsing_ll_anli"
                tools:ignore="WebViewLayout">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/fgt_content2_iv"/>
                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fgt_content2_web"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/aty_do_work_ll_jx">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10">
                    <ImageView
                        android:src="@mipmap/icon_itembank_analysis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="解析"
                        android:textColor="@color/color_c3"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/aty_view_parsing_jx"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_c3"
                    android:layout_height="wrap_content"
                    tools:text="本题考核工程暂停、终止合同的索赔。工程师有权仙灵暂停全部或者任何部分工程。只要这种暂停命令并非承包人"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/fgt_content2_answer_pic" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10">
                    <ImageView
                        android:src="@mipmap/icon_itembank_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考点"
                        android:textColor="@color/color_c3"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/aty_view_parsing_point"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_c3"
                    android:layout_height="wrap_content"
                    tools:text="本题考核工程暂停、终止合同的索赔。工程师有权仙灵暂停全部或者任何部分工程。只要这种暂停命令并非承包人"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>