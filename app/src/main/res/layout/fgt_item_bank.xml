<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".ui.fgt.ItemBankFgt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <LinearLayout
                android:id="@+id/fgt_item_bank_ll_title"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fgt_item_bank_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="法律法规"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_c3"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/icon_itembank_downlist"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/fgt_item_bank_tv_sum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="66"
                                android:textColor="@color/main_color"
                                android:textStyle="bold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="道"
                                android:textColor="@color/color_999"
                                android:textSize="@dimen/sp_12"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/sp_12"
                            android:text="  做题总数"
                            android:textColor="@color/color_999"
                            android:drawableLeft="@mipmap/icon_itembank_makesum"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/fgt_item_bank_tv_sure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="12"
                                android:textColor="@color/main_color"
                                android:textStyle="bold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="@color/color_999"
                                android:textSize="@dimen/sp_12"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/sp_12"
                            android:text="  正确率"
                            android:textColor="@color/color_999"
                            android:drawableLeft="@mipmap/icon_accuracy_rate"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/fgt_item_bank_rl_dk"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:background="@mipmap/icon_everyday_dk"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="每日一题打卡练习"
                            android:textSize="22sp"
                            android:textColor="@color/color_while"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="1dp"
                                android:layout_weight="2"/>
                            <TextView
                                android:layout_marginBottom="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="红包日日领"
                                android:textColor="@color/color_while"
                                android:textSize="@dimen/sp_16"/>
                            <View
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="1dp"
                                android:layout_weight="1"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="60dp"
                        android:text="立即打卡"
                        android:textColor="#FD7405"
                        android:layout_height="60dp"
                        android:background="@mipmap/icon_itembank_everyday_dk"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:elevation="@dimen/dp_5"
                    android:background="@color/color_while"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:id="@+id/fgt_item_bank_ll_everyday"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_marginTop="65dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/icon_itembank_everyday_picture"/>
                            <TextView
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="每日打卡练习"
                                android:textColor="@color/color_c3" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/fgt_item_bank_tv_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="坚持打卡做题36天"
                            android:textColor="@color/color_c6"
                            android:textSize="11sp"
                            android:layout_marginTop="@dimen/dp_10"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="打卡练习完成即可领取每日红包"
                            android:textColor="@color/color_c6"
                            android:textSize="11sp"
                            android:layout_marginTop="@dimen/dp_10"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_ccc"/>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/fgt_item_bank_ll_zxlx"
                            android:paddingLeft="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/icon_itembank_test"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="专项练习"
                                        android:textColor="@color/color_c3" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="单选多选判断各个击破"
                                        android:textColor="@color/color_c6"
                                        android:textSize="11sp"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginTop="@dimen/dp_5"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/color_ccc"/>
                        <LinearLayout
                            android:id="@+id/fgt_item_bank_ll_chapter"
                            android:paddingLeft="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/icon_itembank_chapter"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="章节练习"
                                        android:textColor="@color/color_c3" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="日积月累,逐步提升"
                                        android:textColor="@color/color_c6"
                                        android:textSize="11sp"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginTop="@dimen/dp_5"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="@dimen/dp_10"
                    android:elevation="@dimen/dp_5"
                    android:background="@color/color_while"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:id="@+id/fgt_item_bank_ll_test"
                        android:paddingLeft="@dimen/dp_15"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/icon_itembank_simulation"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="模拟测试"
                                    android:textColor="@color/color_c3" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="查漏补缺,突破难点"
                                    android:textColor="@color/color_c6"
                                    android:textSize="11sp"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_5"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_ccc"/>
                    <LinearLayout
                        android:id="@+id/fgt_item_bank_ll_real"
                        android:paddingLeft="@dimen/dp_15"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/icon_itembank_real"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="真题考试"
                                    android:textColor="@color/color_c3" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="了解自我,突破自我"
                                    android:textColor="@color/color_c6"
                                    android:textSize="11sp"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_5"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/dp_10"
                android:elevation="@dimen/dp_5"
                android:background="@color/color_while"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <LinearLayout
                    android:id="@+id/fgt_item_bank_ll_collect"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:paddingTop="@dimen/dp_15"
                        android:layout_width="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_itembank_collect"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/color_c3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:text="收藏夹"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fgt_item_bank_ll_fail"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:paddingTop="@dimen/dp_15"
                        android:layout_width="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_itembank_fails"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/color_c3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:text="错题集"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fgt_item_bank_ll_do"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:paddingTop="@dimen/dp_15"
                        android:layout_width="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:src="@mipmap/icon_make_record"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/color_c3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:text="做题记录"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>