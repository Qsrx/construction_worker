<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:background="@drawable/shape_search_hot_bg"
        android:id="@+id/aty_search_tv_class"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sp_14"
        android:paddingTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_c6"
        android:text="课程" />
    <ImageView
        android:layout_toRightOf="@id/aty_search_tv_class"
        android:layout_width="@dimen/dp_20"
        android:layout_marginLeft="-5dp"
        android:id="@+id/aty_search_iv_class"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/icon_class_hot_search"/>
</RelativeLayout>