<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_F6"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@mipmap/icon_itembank_files">
        <TextView
            android:id="@+id/item_test_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:textSize="15sp"
            android:textColor="@color/color_c3"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="2019年一级建造师真题考试"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/shape_yellow_3"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_40">
            <TextView
                android:id="@+id/item_test_tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始答题"
                android:textSize="13sp"
                android:textColor="@color/color_c3"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/item_test_iv_lock"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/icon_itembank_lock"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>