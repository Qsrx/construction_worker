<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#60000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/home_dialog_rl_bg"
            android:layout_gravity="center_horizontal"
            android:layout_width="225dp"
            android:layout_height="230dp"
            android:background="@mipmap/icon_home_pop">
            <TextView
                android:id="@+id/home_dialog_tv_name"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建工邦"
                android:textStyle="bold"
                android:textColor="#FFDA0F"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/home_dialog_tv_s_title"
                android:textColor="@color/color_while"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获得更多学习咨询"
                android:textSize="@dimen/sp_12"
                android:layout_below="@id/home_dialog_tv_name"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/home_dialog_tv_btn"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即关注"
                android:background="@drawable/shape_home_dialog_tv_bg"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="#500CA9"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/home_dialog_tv_s_title"
                android:paddingRight="@dimen/dp_10"/>
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="30dp"
                android:background="@color/color_while"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/home_dialog_layout_iv_close"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/icon_home_close"/>
    </LinearLayout>
</RelativeLayout>