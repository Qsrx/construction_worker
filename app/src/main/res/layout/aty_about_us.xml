<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".ui.aty.AboutUsAty">
    <include layout="@layout/header_layout"/>
    <RelativeLayout
        android:background="@color/color_F6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/aty_about_us_pic"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/icon_logo"/>
            <TextView
                android:id="@+id/aty_about_us_name"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建工邦"
                android:textColor="@color/color_c3"
                android:textSize="22sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/aty_about_us_com_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="建工邦有限公司"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_c3"/>
            <TextView
                android:id="@+id/aty_about_us_gw"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CorpRight2018 jiangongbang.com"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_c3"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>