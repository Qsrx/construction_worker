<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_while"
    tools:context=".ui.aty.YzmLoginAty">
    <include layout="@layout/header_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="2"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1.5">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/aty_yzm_login_ll_old"
                    android:visibility="gone"
                    android:paddingRight="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:id="@+id/aty_yzm_login_iv_pw_old"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_login_pw"/>
                    <EditText
                        android:id="@+id/aty_yzm_login_et_pw_old"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入原密码"
                        android:inputType="textPassword"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_c3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:id="@+id/aty_yzm_login_v_line"
                    android:visibility="gone"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ccc"/>
                <LinearLayout
                    android:paddingRight="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:id="@+id/aty_yzm_login_iv_phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_login_phone"/>
                    <EditText
                        android:id="@+id/aty_yzm_login_et_phone"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_c3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/aty_yzm_login_line"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:background="@color/color_ccc"/>
                    <TextView
                        android:id="@+id/aty_yzm_login_tv_getcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_color"/>
                </LinearLayout>
                <View
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ccc"/>
                <LinearLayout
                    android:paddingRight="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:id="@+id/aty_yzm_login_iv_pw"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_yzm"/>
                    <EditText
                        android:id="@+id/aty_yzm_login_et_pw"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="textPassword"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_c3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ccc"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/aty_yzm_login_ll_yqm"
                    android:paddingRight="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:id="@+id/aty_yzm_login_iv_yqm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_logo_yqm"/>
                    <EditText
                        android:id="@+id/aty_yzm_login_et_yqm"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入邀请码(选填)"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_c3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:id="@+id/aty_yzm_login_v_line2"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ccc"/>
            </LinearLayout>

            <TextView
                android:id="@+id/aty_yzm_login_tv"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_16"
                android:text="登录"
                android:gravity="center"
                android:background="@drawable/login_yzm_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/aty_yzm_login_ll_read"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/aty_yzm_login_rb_read"
                    android:button="@null"
                    android:drawableLeft="@drawable/select_gister"
                    android:layout_width="wrap_content"
                    android:text="  同意并阅读"
                    android:textColor="@color/color_999"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/aty_yzm_login_tv_rule"
                    android:textColor="@color/main_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《建工邦注册协议》"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/aty_yzm_login_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1.3">
        <TextView
            android:id="@+id/aty_yzm_login_tv_forget"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="忘记密码？"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999"/>
        <!--<LinearLayout-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical">-->
            <RelativeLayout
                android:id="@+id/aty_yzm_login_rl"
                android:layout_centerVertical="true"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_ccc"/>
                <TextView
                    android:background="@color/color_while"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_ccc"
                    android:layout_centerInParent="true"
                    android:text="微信账号登录"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/aty_yzm_login_rl">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/aty_yzm_login_iv_wx"
                android:layout_marginTop="30dp"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_login_wx"
                />
        </RelativeLayout>
        <!--</LinearLayout>-->
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="0.3"/>
</LinearLayout>