<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_F6">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:background="@color/color_while"
            android:layout_height="90dp">
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/home_xz_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="双12后热，马上期末，你需要准备什么呢？"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_c3"
                    android:ellipsize="end"
                    android:maxLines="3"/>
                <TextView
                    android:id="@+id/home_xz_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建工邦 2018/12/24"
                    android:textColor="@color/color_999"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/dp_10"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/home_xz_pic"
                android:layout_width="110dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_test3"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>