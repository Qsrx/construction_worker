<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_while"
    android:orientation="vertical"
    android:layout_height="51dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/icon_itembank_collection_topic"/>
        <TextView
            android:id="@+id/item_exercise_tv_title"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="施工过程中，工程师下令暂停部分工作啊啊啊啊啊啊啊啊"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_c3"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/icon_itembank_seecollect"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
</LinearLayout>