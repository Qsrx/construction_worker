<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:layout_centerVertical="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".ui.aty.CachingAty">
    <include layout="@layout/header_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/aty_caching_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_yellow_15"
            android:gravity="center"
            android:text="全部暂停"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_c3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="3dp"
            android:paddingBottom="@dimen/dp_3"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:id="@+id/aty_caching_rv"/>
    <TextView
        android:id="@+id/aty_cache_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/color_c3"
        android:background="@color/main_color"/>
</LinearLayout>