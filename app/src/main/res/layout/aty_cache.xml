<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.aty.CacheAty">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <cn.jzvd.JzvdStd
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/aty_course_selection_jz"/>
        <ImageView
            android:id="@+id/aty_course_selection_back"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_video_back"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_while">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存笔记"
            android:background="@drawable/shape_save_bg"
            android:padding="3dp"
            android:visibility="gone"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_c3"
            android:id="@+id/aty_course_selection_save"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/aty_course_selection_iv_down"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_class_down"/>
        <ImageView
            android:id="@+id/aty_course_selection_iv_share"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_class_share"/>
        <RadioButton
            android:id="@+id/aty_course_selection_rb_sc"
            android:button="@null"
            android:drawableLeft="@drawable/class_is_sc"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_ccc"/>
    <LinearLayout
        android:paddingRight="@dimen/dp_10"
        android:background="@color/color_while"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:src="@mipmap/icon_cache_back"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_class_manageload"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_height="wrap_content"
            android:text="缓存管理"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_c6"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:scrollbars="none"
        android:layout_weight="1">
        <com.txunda.construction_worker.ui.view.ExpandableListViewForScrollView
            android:id="@+id/expend_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:scrollbars="none"/>
    </ScrollView>

    <TextView
        android:id="@+id/aty_cache_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/color_c3"
        android:background="@color/main_color"/>
</LinearLayout>