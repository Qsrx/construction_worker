<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:paddingTop="@dimen/dp_10"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_do_record_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="专项练习题(单选)"
        android:textSize="@dimen/sp_16"/>
    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/icon_itembank_make_time"/>
        <TextView
            android:id="@+id/item_do_record_tv_time"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/11/07"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999"/>
        <TextView
            android:id="@+id/item_do_record_tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共120道,做对100道"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_ccc"/>
</LinearLayout>