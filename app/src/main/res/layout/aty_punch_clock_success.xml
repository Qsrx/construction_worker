<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".ui.aty.PunchClockSuccessAty">
    <include layout="@layout/header_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_ccc"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_answer_report_bg">
        <TextView
            android:id="@+id/aty_punch_clock_success_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜你,答案正确"
            android:layout_centerInParent="true"
            android:textColor="@color/color_c3"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打卡成功"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_c3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学习在于积累,继续加油吧！"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
    <LinearLayout
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/aty_punch_clock_success_finish"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="完成"
            android:textColor="@color/color_c3"
            android:textSize="15sp" />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_ccc"/>
        <TextView
            android:id="@+id/aty_punch_clock_success_see"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="查看解析"
            android:textColor="@color/color_c3"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>