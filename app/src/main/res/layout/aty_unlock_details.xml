<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    tools:context=".ui.aty.UnlockDetailsAty">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/aty_unlock_details_header_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@mipmap/img_test3"/>
                <ImageView
                    android:id="@+id/aty_unlock_details_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/icon_video_back"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <TextView
                    android:id="@+id/aty_unlock_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一级建造师-法律法规题库"
                    android:textSize="15sp"
                    android:textColor="@color/color_c3" />
                <TextView
                    android:id="@+id/aty_unlock_details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/price_color"
                    android:text="¥ 128.00"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_F6"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/main_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="题库介绍"
                    android:textColor="@color/color_c3"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_5"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_ccc"
                android:layout_marginLeft="@dimen/dp_10"/>
            <WebView
                android:id="@+id/aty_unlock_details_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:padding="@dimen/dp_10"-->
            <!--android:textColor="@color/color_c3"-->
            <!--android:text="这里是题库介绍，一建建造师-法律法规题库购买的是本科目的所有试题，包括:专项练习题、章节练习题、模拟、真题考试题，反正买就对了。"/>-->

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_ccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <RelativeLayout
                android:id="@+id/aty_unlock_details_kf"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_while">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/icon_class_topkf"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询客服"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_c3"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/aty_unlock_details_buy"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="立即购买"
                        android:textColor="@color/color_c3"
                        android:textSize="@dimen/sp_18"
                        android:gravity="bottom|center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>