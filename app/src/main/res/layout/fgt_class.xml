<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F6"
    android:layout_height="match_parent"
    tools:context=".ui.fgt.ClassFgt">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="@color/color_while"/>
        <LinearLayout
            android:background="@color/color_while"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/fgt_class_kf"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="13dp"
                android:src="@mipmap/icon_class_kf"/>
            <RelativeLayout
                android:id="@+id/fgt_class_header_rl_title"
                android:layout_marginBottom="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_7"
                android:background="@drawable/shape_class_header_bg"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical">
                    <ImageView
                        android:src="@mipmap/icon_search"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:id="@+id/fgt_class_header_tv_title"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程、关键词"/>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/fgt_class_ls"
                android:padding="13dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_historical_record"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"/>
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/fgt_class_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:tl_indicator_color="@color/main_color"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textAllCaps="true"
            app:tl_textBold="NONE"
            app:tl_textSelectColor="@color/color_c3"
            app:tl_textUnselectColor="@color/color_c6"
            app:tl_textsize="15sp"
            app:tl_underline_color="@color/white"
            app:tl_underline_height="1dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/fgt_class_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>
</FrameLayout>