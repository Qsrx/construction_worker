<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_while"
    android:layout_height="86dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_onclick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/item_cachi_iv_state"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/icon_my_cache_start"/>
        <LinearLayout
            android:id="@+id/ll_falfasf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_1111"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/item_caching_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_12"
                    android:text="1.久久：如何成功考取一级建造师？"
                    android:textColor="@color/color_c6"/>
                <TextView
                    android:id="@+id/item_caching_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10分钟"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>



            <TextView
                android:id="@+id/item_caching_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未开始"
                android:textColor="@color/main_color"
                android:textSize="11sp" />
            <ProgressBar
                android:id="@+id/item_cachi_pb"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:progress="80"
                android:layout_marginTop="3dp"
                android:max="100"
                android:progressTint="@color/main_color"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressBackgroundTint="@color/color_999"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/color_d2d2d2"/>
</LinearLayout>