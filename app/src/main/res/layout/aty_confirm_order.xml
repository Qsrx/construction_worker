<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".ui.aty.ConfirmOrderAty">
    <include layout="@layout/header_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_ccc"/>
    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/aty_confirm_order_no_pay">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">
            <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:shape_mode="round_rect"
                android:src="@mipmap/img_test2"
                android:id="@+id/aty_confirm_order_pic"
                android:scaleType="centerCrop"
                app:round_radius="@dimen/dp_5"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="【全科】市政专业高级班"
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/aty_confirm_order_title"
                    android:textColor="@color/color_c3"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/aty_confirm_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="¥ 1288.00"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/price_color"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/aty_confirm_order_s_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="赠市政专业全科题库"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F6"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:id="@+id/aty_confirm_order_red_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="可用红包：¥ 30.00"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_c3"/>
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/aty_confirm_order_use"
                    android:button="@null"
                    android:drawableLeft="@drawable/select_is_user"
                    android:layout_width="wrap_content"
                    android:text="  使用"
                    android:textColor="@color/color_c3"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/aty_confirm_order_cant_use"
                    android:button="@null"
                    android:drawableLeft="@drawable/select_is_user"
                    android:layout_width="wrap_content"
                    android:text="  不使用"
                    android:textColor="@color/color_c3"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F6"/>
        <RelativeLayout
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:text="商品总额"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/aty_confirm_order_one_price"
                android:layout_centerVertical="true"
                tools:text="¥ 1288.00"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/aty_confirm_order_rl_dk"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:text="红包抵扣"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/aty_confirm_order_dk"
                tools:text="- ¥ 30.00"
                android:layout_alignParentRight="true"
                android:textColor="@color/price_color"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ccc"
            android:layout_marginLeft="@dimen/dp_10"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_c3"/>
            <TextView
                android:id="@+id/aty_confirm_order_real_price"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="¥ 1258.00"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/price_color"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F6"/>
        <RelativeLayout
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:text="支付方式"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="微信支付"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/color_F6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_c3"/>
            <TextView
                android:id="@+id/aty_confirm_order_price_sum"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="¥ 1258.00"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/price_color"/>
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/aty_confirm_order_post"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/main_color"
                android:text="提交订单"
                android:textSize="15sp"
                android:textColor="@color/color_c3"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aty_confirm_order_yj_pay"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="60dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_steam"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:textColor="@color/color_c3"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您可以在我的订单中查看订单"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999"
            android:layout_marginTop="@dimen/dp_5"/>
        <TextView
            android:id="@+id/aty_confirm_order_tv_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="60dp"
            android:text="完成"
            android:background="@drawable/login_yzm_bg"
            android:textColor="@color/color_c3"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>