<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".ui.aty.PublicationEvaluationAty">
    <RelativeLayout
        android:background="@color/color_while"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/aty_publication_evauation_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/icon_header_back"/>
        <TextView
            android:textColor="@color/color_c3"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表评价" />
        <TextView
            android:id="@+id/aty_publication_evauation_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="提交"
            android:textColor="@color/main_color"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_while"
            android:layout_marginTop="@dimen/dp_10">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/aty_publication_evauation_img"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_test3"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="评分"
                    android:textColor="@color/color_c3"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_10"
                    android:numStars="5"
                    android:rating="5"
                    style="@style/mRatingBar"
                    android:layout_marginLeft="20dp"
                    android:progressTint="@color/colorAccent"
                    android:stepSize="1" />
                <TextView
                    android:id="@+id/aty_publication_evauation_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_999"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#d2d2d2"/>
            <EditText
                android:id="@+id/aty_publication_evauation_content"
                android:padding="@dimen/dp_10"
                android:gravity="left"
                android:textSize="@dimen/sp_12"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="快告诉小伙伴宝贝多好吧，大家都等你的使用心得呢"
                android:textColorHint="@color/color_999"
                android:textColor="@color/color_c3"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>