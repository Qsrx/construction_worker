<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.aty.CourseSelectionAty">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <cn.jzvd.JzvdStd
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/aty_course_selection_jz"/>
        <ImageView
            android:id="@+id/aty_course_selection_back"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_video_back"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_while">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存笔记"
            android:background="@drawable/shape_save_bg"
            android:padding="3dp"
            android:visibility="gone"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_c3"
            android:id="@+id/aty_course_selection_save"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/aty_course_selection_iv_down"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_class_down"/>
        <ImageView
            android:id="@+id/aty_course_selection_iv_share"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_class_share"/>
        <RadioGroup
            android:id="@+id/aty_course_selection_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--<RadioButton-->
                <!--android:id="@+id/aty_course_selection_rb_sc"-->
                <!--android:button="@null"-->
                <!--android:drawableLeft="@drawable/class_is_sc"-->
                <!--android:layout_marginRight="@dimen/dp_25"-->
                <!--android:layout_width="@dimen/dp_20"-->
                <!--android:layout_height="@dimen/dp_20"/>-->
            <ImageView
                android:id="@+id/aty_course_selection_rb_sc"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </RadioGroup>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_ccc"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/aty_course_selection_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tl_indicator_color="@color/main_color"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textAllCaps="true"
        app:tl_textBold="NONE"
        app:tl_textSelectColor="@color/color_c3"
        app:tl_textUnselectColor="@color/color_c6"
        app:tl_textsize="15sp"
        app:tl_underline_color="@color/white"
        app:tl_underline_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/aty_course_selection_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/aty_course_selection_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_ccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <RelativeLayout
                android:id="@+id/aty_selection_subjects_rl_kf"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_while">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/icon_class_topkf"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询客服"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_c3"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/aty_selection_subjects_rl_buy"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/aty_course_selection_tv_price"
                        android:text="单科购买 ¥1288"
                        android:textColor="@color/color_c3"
                        android:textSize="@dimen/sp_18"
                        android:gravity="bottom|center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>