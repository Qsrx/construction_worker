<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_while"
    android:fitsSystemWindows="true"
    tools:context=".ui.aty.DoWorkAty">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/aty_do_work_iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="13dp"
            android:src="@mipmap/icon_header_back"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/aty_do_work_tv_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交卷"
            android:textColor="@color/color_c3"
            android:background="@drawable/shape_yellow_3"
            android:textSize="13sp"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />
        <!--<RadioButton-->
            <!--android:id="@+id/aty_do_work_rb_sc"-->
            <!--android:button="@null"-->
            <!--android:drawableLeft="@drawable/class_is_sc"-->
            <!--android:layout_marginRight="@dimen/dp_10"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_width="@dimen/dp_30"-->
            <!--android:layout_marginLeft="@dimen/dp_20"-->
            <!--android:layout_height="@dimen/dp_30"/>-->
        <ImageView
            android:id="@+id/aty_do_work_rb_sc"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_30"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/aty_do_work_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="每日打卡练习-单项选择题"
                android:textSize="17sp"
                android:layout_margin="@dimen/dp_15"
                android:textColor="@color/color_c3"
                />
            <TextView
                android:id="@+id/aty_do_work_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_c3"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                tools:text="施工过程中，工程师下令暂停部分工程，而暂停的的起因并非承包商违约或其他意外风险，承包商外业主提出索赔,则()。"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:id="@+id/aty_do_work_rv"/>
            <!--<TextView-->
                <!--android:id="@+id/aty_do_work_tv_see"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="查看解析"-->
                <!--android:textColor="@color/color_c3"-->
                <!--android:background="@drawable/shape_yellow_3"-->
                <!--android:textSize="15sp"-->
                <!--android:paddingLeft="@dimen/dp_30"-->
                <!--android:paddingRight="@dimen/dp_30"-->
                <!--android:paddingTop="@dimen/dp_5"-->
                <!--android:paddingBottom="@dimen/dp_5"-->
                <!--android:layout_marginRight="@dimen/dp_10"-->
                <!--android:layout_marginBottom="@dimen/dp_20"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="right"-->
                <!--/>-->
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/aty_do_work_ll_jx">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="#f5f5f5"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10">
                    <ImageView
                        android:src="@mipmap/icon_itembank_analysis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="解析"
                        android:textColor="@color/color_c3"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_c3"
                    android:layout_height="wrap_content"
                    android:id="@+id/aty_do_work_tv_jx"
                    android:text="本题考核工程暂停、终止合同的索赔。工程师有权仙灵暂停全部或者任何部分工程。只要这种暂停命令并非承包人"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10">
                    <ImageView
                        android:src="@mipmap/icon_itembank_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考点"
                        android:textColor="@color/color_c3"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/aty_do_work_tv_point"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_c3"
                    android:layout_height="wrap_content"
                    android:text="本题考核工程暂停、终止合同的索赔。工程师有权仙灵暂停全部或者任何部分工程。只要这种暂停命令并非承包人"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:id="@+id/aty_do_work_tv_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看解析"
        android:textColor="@color/color_c3"
        android:background="@drawable/shape_yellow_3"
        android:textSize="15sp"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:layout_gravity="right"
        />
</LinearLayout>