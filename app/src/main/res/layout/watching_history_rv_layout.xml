<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_while"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/watching_history_siv_header"
            app:shape_mode="round_rect"
            android:src="@mipmap/img_test2"
            android:scaleType="centerCrop"
            app:round_radius="@dimen/dp_5"/>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一级建造师-法律法规"
                android:textSize="@dimen/sp_16"
                android:id="@+id/watching_history_title"
                android:textColor="@color/color_c3"/>
            <TextView
                android:id="@+id/watching_history_tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一节"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_c3"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/watching_history_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/11/01"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_12"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_ccc"
        android:layout_marginLeft="@dimen/dp_10"/>
</LinearLayout>