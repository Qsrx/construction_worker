<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6"
    tools:context=".ui.fgt.HomeFgt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/color_while"/>
        <RelativeLayout
            android:background="@color/color_while"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <!--<ImageView-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="48dp"-->
                <!--android:padding="12dp"-->
                <!--android:id="@+id/fgt_home_list"-->
                <!--android:src="@mipmap/icon_home_list"/>-->
            <ImageView
                android:id="@+id/fgt_home_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:src="@mipmap/icon_home_list"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一级建造师"
                android:textColor="@color/color_c3"
                android:textSize="@dimen/sp_18"
                android:id="@+id/fgt_home_tv_title"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/fgt_home_iv_wx"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_home_follow_wx"/>
                <ImageView
                    android:id="@+id/fgt_home_tv_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_home_share"/>
            </LinearLayout>
        </RelativeLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/fgt_home_smartrefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/fgt_home_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/fgt_home_banner" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="@color/color_while">
                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@mipmap/icon_home_calendar"
                        android:padding="14dp" />
                    <TextView
                        android:id="@+id/fgt_home_tv_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_c3"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:text="距离建造师考试还有100天"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_ccc"/>
                <RadioGroup
                    android:id="@+id/aty_fgt_home_rg"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/color_while"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_gravity="center"
                        android:id="@+id/fgt_home_rb_xz"
                        android:layout_marginTop="7dp"
                        android:drawableTop="@drawable/home_xz"
                        android:text="报考须知"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_10"
                        android:drawablePadding="-15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:layout_gravity="center"
                        android:id="@+id/fgt_home_rb_dt"
                        android:layout_marginTop="7dp"
                        android:drawableTop="@drawable/home_dt"
                        android:text="考试动态"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_10"
                        android:drawablePadding="-15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:layout_gravity="center"
                        android:id="@+id/fgt_home_rb_point"
                        android:layout_marginTop="7dp"
                        android:drawableTop="@drawable/home_point"
                        android:text="考试技巧"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_10"
                        android:drawablePadding="-15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:layout_gravity="center"
                        android:id="@+id/fgt_home_rb_lt"
                        android:layout_marginTop="7dp"
                        android:drawableTop="@drawable/home_lt"
                        android:text="问答论坛"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_10"
                        android:drawablePadding="-15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/sp_12"
                        android:layout_height="match_parent" />
                </RadioGroup>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fgt_home_fl"/>

                <!--<com.txunda.construction_worker.ui.view.NoScrollListview-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/fgt_home_lv"-->
                    <!--android:layout_marginLeft="@dimen/dp_10"-->
                    <!--android:layout_marginRight="@dimen/dp_10"-->
                    <!--android:scrollbars="none"/>-->

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_gravity="bottom|right"
        android:id="@+id/fgt_home_ll_ask"
        android:background="@drawable/shape_left_15"
        android:gravity="center_vertical"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30">
        <ImageView
            android:layout_margin="@dimen/dp_7"
            android:src="@mipmap/icon_home_question"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提问"
            android:textSize="13sp"
            android:textColor="@color/color_c3"/>
    </LinearLayout>
</FrameLayout>