<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_while"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/header_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d2d2d2"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:id="@+id/aty_order_details_type"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程购买"
                    android:textColor="@color/color_c3"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/aty_order_details_state"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待支付"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/main_color"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_d2d2d2"
                android:layout_marginLeft="@dimen/dp_10"/>
            <LinearLayout
                android:id="@+id/order_context_ll_bg"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
                <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                    android:layout_width="@dimen/dp_130"
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/aty_order_details_pic"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/img_test3"
                    android:layout_marginBottom="@dimen/dp_20"
                    app:shape_mode="round_rect"
                    app:round_radius="5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:paddingTop="13dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/aty_order_details_name"
                        android:layout_width="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="【全科】市政专业高级班"
                        android:textColor="@color/color_c3"
                        android:textSize="@dimen/sp_14"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/aty_order_details_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 1288.00"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/price_color"/>
                    <TextView
                        android:layout_marginBottom="13dp"
                        android:id="@+id/aty_order_details_s_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赠市政专业全科题库"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包"
                    android:textColor="@color/color_c3"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/aty_order_details_red_packge"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ¥ 30"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/price_color"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_d2d2d2"
                android:layout_marginLeft="@dimen/dp_10"/>
            <RelativeLayout
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付款"
                    android:textColor="@color/color_c3"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/aty_order_details_price_real"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 1299"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/price_color"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_F6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:orientation="vertical"
                android:background="@color/color_while">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="订单编号:" />
                    <TextView
                        android:id="@+id/aty_order_details_order_code"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="75145641513151" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="支付方式:" />
                    <TextView
                        android:id="@+id/aty_order_details_pay_way"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="微信支付" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="创建时间:" />
                    <TextView
                        android:id="@+id/aty_order_details_create_time"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="2018/11/17 17:22:22" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/aty_order_details_ll_confirm_time"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="下单时间:" />
                    <TextView
                        android:id="@+id/aty_order_details_confirm_time"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/color_999"
                        android:text="2018/11/17 17:22:22" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:background="@color/color_F6"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="@color/color_F6"/>
    <LinearLayout
        android:id="@+id/aty_order_details_ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/aty_order_details_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_two_right"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="取消订单"
            android:textColor="@color/color_c6"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/aty_order_details_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shape_yellow_3"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="立即支付"
            android:textColor="@color/color_c3"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/aty_order_details_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shape_eb_3"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:text="已完成"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>